package  {		dynamic public class ExtendedArray extends Array{ // the extended version of the default Array class		public function ExtendedArray() {			super();		}				public function remove(n:Object):Boolean { // user-friendly method that removes certain element and returns if it succeeded			var index:int = this.indexOf(n);			if(index>=0) {					this.splice(index, 1);					return true;			}			return false;		}				public function deleteData() { // deletes the data from the array			while(this.length>0) {				this.pop();			}		}				public function getCopy():ExtendedArray { 			var newArray:ExtendedArray = new ExtendedArray();			for(var i:int=0; i<this.length; i++) {				newArray.push(this[i].getCopy());			}			return newArray;		}	}}